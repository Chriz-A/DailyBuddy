<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:weightSum="1"
    android:background="@drawable/layout_color_gradient"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ort"
        android:id="@+id/search_place"
        android:layout_weight="1"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Suchen"
            android:id="@+id/button_search"
            />


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/stadt"
        android:textColor="@color/black"
        android:id="@+id/city"
        android:paddingTop="20dp"
        android:paddingBottom="10dp"
        android:textSize="40sp"
       />

  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="test"
      android:gravity="center"
      android:id="@+id/description"
      android:textSize="20sp"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/temperatur"
        android:textColor="@color/black"
        android:gravity="center"
        android:textSize="60sp"
        android:paddingTop="10dp"
        android:paddingBottom="30dp"
        android:id="@+id/temperature"/>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:padding="10dp"

        >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Luftfeuchtigkeit:"
        android:id="@+id/humidity"
        android:layout_weight="0.6"
        android:gravity="center"
        />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/value_humidity"
            android:textColor="@color/black"
            android:layout_weight="0.1"
            android:gravity="center"


            />

        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal" android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:padding="10dp"

            >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Windgeschwindigkeit:"
            android:id="@+id/wind_speed"
            android:layout_weight="0.5"
            android:gravity="center"


            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/value_wind_speed"
            android:textColor="@color/black"
            android:layout_weight="0.1"
            android:gravity="center"


            />

        </LinearLayout>



    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:padding="10dp"

        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sonnenaufgang:"
            android:id="@+id/sunrise"
            android:gravity="center"
            android:layout_weight="0.6"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/value_sunrise"
            android:layout_weight="0.1"
            android:textColor="@color/black"
            android:text="--:--"
            android:gravity="center"
            />

        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal" android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:weightSum="1"
            >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sonnenuntergang:"
            android:id="@+id/sunset"
            android:gravity="center"
            android:layout_weight="0.6"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/value_sunset"
            android:textColor="@color/black"
            android:text="--:--"
            android:gravity="center"
            android:layout_weight="0.1"
            />

    </LinearLayout>
</LinearLayout>